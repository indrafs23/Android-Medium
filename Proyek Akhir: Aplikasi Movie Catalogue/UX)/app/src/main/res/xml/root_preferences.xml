<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Change Languange">

        <Preference
            app:key="@string/changeLanguange"
            app:title="Languange"
            app:summary="Click to change the languange" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Notification">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/release_reminder"
            app:title="Release Reminder"
            app:summary="You will receive daily movie release info every 8 AM"/>

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/daily_reminder"
            app:title="Daily Reminder"
            app:summary="You will reveiced daily reminder every 7 AM" />

    </PreferenceCategory>

</PreferenceScreen>
